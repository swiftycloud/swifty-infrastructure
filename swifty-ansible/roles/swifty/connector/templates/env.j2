APP_NAME="Swifty Connector"
APP_ENV={{app_env}}
APP_KEY={{app_key}}
APP_DEBUG=true
APP_URL=https://{{ hostvars[groups['connector'][0]]['public_dns'] }}

VERIFY_SSL=false

API_ADMD_ENDPOINT=https://{{ hostvars[groups['gw'][0]]['public_dns'] }}/admd/v1/
API_USERNAME=swyadmin
API_PASSWORD={{ keystone_swyadmin_password }}

MAIN_DOMAIN={{main_domain}}
DASHBOARD_URL=https://{{ hostvars[groups['ui'][0]]['public_dns'] }}/

LOG_CHANNEL=stack

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=default
DB_USERNAME=default
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_DRIVER=sync

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_DRIVER=sendgrid
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

MAIL_DOMAIN={{main_domain}}
MAIL_FROM_ADDRESS={{mail_from }}
MAIL_FROM_NAME={{mail_from_name}}

SENDGRID_API_KEY={{sendgrid_api_key}}
SENDGRID_WELCOME_TPL={{sendgrid_welcome_tpl}}
SENDGRID_PASSWORD_RESET_TPL={{sendgrid_password_reset_tpl}}
SENDGRID_VERIFICATION_TPL={{sendgrid_verification_tpl}}

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
